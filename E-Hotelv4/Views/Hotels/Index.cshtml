@model IEnumerable<E_Hotelv4.Models.Hotel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Update Hotel Info</h2>
<table id="hotelIndex" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.Rating)
                </td>
                <td>
                    @Html.DisplayNameFor(model => model.UpdateDate)
                </td>
                <td>
                    @Html.ActionLink("Update", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>
</table>
<p><a class="btn btn-primary" href="/Hotels/Create">Create</a></p>
@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#hotelIndex').DataTable({
                "pagingType": "full_numbers"
            });
        });
    </script>
}
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />