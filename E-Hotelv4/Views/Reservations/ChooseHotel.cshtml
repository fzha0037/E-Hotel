@model IEnumerable<E_Hotelv4.Models.Hotel>
@{
    ViewBag.Title = "ChooseHotel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Select Your Preferred Hotel</h2>

<table id="chooseHotel" class="display" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Address)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UpdateDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Address)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Rating)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.UpdateDate)
                </td>
                <td>
                    @Html.ActionLink("Choose", "Create", new { id = item.Id })
                </td>
            </tr>
        }
    </tbody>

</table>

@section Scripts{
    <script src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#chooseHotel').DataTable({
                "pagingType": "full_numbers"
            });
        });
    </script>
}
<link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />